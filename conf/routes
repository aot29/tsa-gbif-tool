# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

GET     /list                       controllers.GbifToolController.listSpecies()
DELETE  /cleanup                    controllers.GbifToolController.cleanup()
PUT     /markAllUsed                controllers.GbifToolController.markAllUsed()
PUT     /match/:name                controllers.GbifToolController.matchName(name: String)
PUT     /matchAll                   controllers.GbifToolController.matchAll()
